/*p265*/
#define BACK_COLOR_MASK 0xFF00
#define BACK_COLOR_SHIFT 4
#define FORE_COLOR_MASK 0xFF
#define FORE_COLOR_SHIFT 0

/*P266*/
#define BLICK 0x80

#define BLACK_COLOR 0x00
#define BLUE_COLOR 0x01
#define GREEN_COLOR 0x02
#define RED_COLOR 0x04
#define WHITE_COLOR 0x07

#define DEFAULT_CHAR_COLOR 0x0F
#define DEFAULT_BACK_COLOR 0x00
#define DEFAULT_FORE_COLOR 0x0F
#define DEFAULT_COLOR  ((DEFAULT_BACK_COLOR <<BACK_COLOR_SHIFT) |      \
    (DEFAULT_FORE_COLOR))
