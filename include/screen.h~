#define CRTC_ADDR_REG 0x3D4
#define CRTC_DATA_REG 0x3D5
#define START_ADDR_H 0xC
#define START_ADDR_L 0xD
#define CURSOR_H 0xE
#define CURSOR_L 0xF
#define V_MEM_BASE 0xB8000
#define V_MEM_SIZE 0x8000//80*25模式，显存32KB
#define NR_CHARS_PER_LINE 80
#define NR_BYTES_PER_CHAR 2
#define NR_LINES_PER_SCREEN 25
#define NR_BYTES_PER_LINE (NR_CHARS_PER_LINE*NR_BYTES_PER_CHAR)
#define NR_BYTES_PER_SCREEN (NR_LINES_PER_SCREEN*NR_BYTES_PER_LINE)
